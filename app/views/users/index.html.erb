<section id="users">
<% @users.each do |user| %>
	<div class="user clearfix">
		<%= image_tag user.image_url %>
		<h1><%= user.name %> <span class="twitter"><%= link_to "@#{user.nickname}", "http://twitter.com/#{user.nickname}" %></span></h1>
		<p class="description"><%= user.description if user.description? %></p>
		<%= link_to user.website, user.website if user.website? %>
	</div>
	<div class="clear"></div>
<% end %>
</section>
